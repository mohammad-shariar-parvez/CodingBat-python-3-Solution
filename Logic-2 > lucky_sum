def lucky_sum(a, b, c):
  if a == 13 :
    return 0
  elif b ==13:
    return a
  elif c ==13:
    return a+b
  else:
    return a+b+c
############################## OR
def lucky_sum(a, b, c):
  sum = 0
  li = [a,b,c]
  for i in li :
    if li[i] ==13 :
      break

    else:
      sum = sum + li[i]
  return sum

print(lucky_sum(2,13,1))
